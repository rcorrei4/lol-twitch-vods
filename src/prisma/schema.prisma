generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Server {
  br
  eune
  euw
  jp
  kr
  lan
  las
  na
  oce
  tr
  me
  ru
}

model Token {
  id           Int       @id @default(autoincrement())
  access_token String    @unique
  expires_at   DateTime
}

model Streamer {
  id                 Int              @id @default(autoincrement())
  twitchId           String           @unique
  displayName        String
  login              String
  profileImage       String
  createdAt          DateTime         @default(now())
  lolAccounts        String[]

  participants     Participant[]
}

model Match {
  id                    Int           @id @default(autoincrement())
  matchId               Int           @unique
  region                Server
  gameDuration          Int
  gameCreationDatetime  DateTime
  gameStartDatetime     DateTime
  gameEndDatetime       DateTime

  participants          Participant[]
  @@index([matchId])
}

model Participant {
  id                    Int           @id @default(autoincrement())
  championName          String
  kills                 Int
  deaths                Int
  assists               Int
  position              String

  matchId               Int           
  match                 Match         @relation(fields: [matchId], references: [id])
  streamerId            Int?          
  streamer              Streamer?     @relation(fields: [streamerId], references: [id])
}
