generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Position {
  TOP
  JUNGLE
  MIDDLE
  BOTTOM
  UTILITY
}

model Token {
  id           Int       @id @default(autoincrement())
  access_token String    @unique
  expires_at   DateTime
}

model Streamer {
  id                 Int              @id @default(autoincrement())
  twitchId           String           @unique
  displayName        String
  login              String
  profileImage       String
  createdAt          DateTime         @default(now())
  lolAccounts        String[]

  participants       Participant[]
}

model Match {
  id                    BigInt        @id
  gameEndDatetime       DateTime
  gameStartDatetime     DateTime

  participants          Participant[]
}

model Participant {
  id                    Int           @id @default(autoincrement())
  puuid                 String
  championName          String
  kills                 Int
  deaths                Int
  assists               Int
  position              Position
  win                   Boolean
  vodUrl                String

  matchId               BigInt           
  match                 Match         @relation(fields: [matchId], references: [id])
  streamerId            Int?          
  streamer              Streamer?     @relation(fields: [streamerId], references: [id])

  @@unique([puuid, matchId])
}
